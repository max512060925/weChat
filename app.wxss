/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  position: relative;
  width: 100%;
}
page{
  height: 100%;
  overflow: hidden;
}
.background{
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
} 
.tip{
  position: absolute;
  width: auto;
  height: 30rpx;
  z-index: 2;
  bottom: 33rpx;
  right: 56rpx;
  color: #fff;
  text-decoration: underline;
  font-size: 24rpx;
  letter-spacing: 2rpx;
}
audio{
  position: absolute;
  z-index: 2;
  top:30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('http://mothersjewelry.campaignchowsangsang.com/static/img/play.png') center center no-repeat;
  background-size:contain;
  animation: animation 3s linear infinite; 
}
@keyframes animation{
    0%{transform:rotatez(0deg);}
    100%{transform:rotatez(365deg);}
}
.stop{
  position: absolute;
  z-index: 2;
  top:30rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  background: url('http://mothersjewelry.campaignchowsangsang.com/static/img/stop.png') center center no-repeat;
  background-size:contain;
}